.Avatar {
  background-attachment: scroll;
  background-position: top center;
  background-repeat: no-repeat;
  background-size: cover;
  border-radius: 50%;
  display: block;
  flex-shrink: 0;

  &.__animation {
    transition: all 0.3s ease-in-out;

    &:hover {
      transform: scale(2) translate3d(0, 0, 0);
    }
  }
}
